@{
    ViewBag.Title = "Organizer";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <title>E@T</title>
</head>
<body>
    @*Header Part*@
    <div class="navbar navbar-expand-sm navbar-inverse navbar-fixed" style="background-color:white;position:relative;top:7%">
        <div class="container">
            <div class="navbar-header" style="color:white;height:10%">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="navbar-collapse collapse" style="color:white;bottom:0px;position:absolute">

                <ul class="nav navbar-nav">
                    <li class="nav-item">

                        @Html.ActionLink("HOME", "Dashboard", "Organizer", new { @class = "loginLink_home", @id = "addEvent_User" })
                    </li>
                    <li style="color:black;" class="nav-item">

                        @Html.ActionLink("ADDEVENT", "CreateEvent", "Organizer", new { @class = "loginLink_home", @id = "addEvent_User" })

                    </li>
                    <li style="color:black;" class="nav-item">
                        @Html.ActionLink("REPORTS","Reports", "Organizer" , new { @class = "loginLink_home", @id = "addEvent_User" })
                    </li>
                </ul>

            </div>

        </div>

    </div>
    @*Header Part Close*@

    @RenderBody()

</body>
</html>
